---
component: filterbar
---
<nav class="navbar navbar-default add-on-navbar" role="navigation">
	  <div class="container-fluid">
	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav">
	      	<li class="dropdown">
	          <a href="#" class="dropdown-toggle first" data-toggle="dropdown">Filter by <strong>industry</strong> <b class="caret"></b></a>
	          <ul class="dropdown-menu">
	          	{{#each categories}}
	          		{{#if this.fields.is_industry }}
	            	<li><a href="#industry/{{ this.fields.slug }}" id="{{ this.fields.slug }}">{{ this.fields.name }}</a></li>
	            	{{/if}}
	            {{/each}}
	          </ul>
	        </li>
	        <li class="dropdown">
	          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Filter by <strong>category</strong> <b class="caret"></b></a>
	          <ul class="dropdown-menu">
	          	{{#each categories}}
	          		{{#unless this.fields.is_industry }}
	            	<li><a href="#category/{{ this.fields.slug }}" id="{{ this.fields.slug }}">{{ this.fields.name }}</a></li>
	            	{{/unless}}
	            {{/each}}
	          </ul>
	        </li>
	      </ul>
	      <form class="navbar-form navbar-right" role="search">
	        <div class="input-group">
	          <input type="text" class="form-control" ng-model="filterText" placeholder="Search add-ons">
	          <span class="input-group-btn">
		        <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
		      </span>
	        </div>
	      </form>
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container -->
	</nav>